<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/root_view">

	<android.support.v7.widget.CardView
		android:layout_height="192dp"
		android:layout_width="match_parent"
		app:elevation="5dp"
		app:cardCornerRadius="4dp"
		android:id="@+id/egg"
		android:layout_margin="5dp">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="centerCrop"
				android:id="@+id/mo_user_head"/>

			<de.hdodenhof.circleimageview.CircleImageView
				android:layout_height="80dp"
				android:layout_width="80dp"
				android:id="@+id/user_head"
				android:src="@drawable/kirbytheme"
				android:layout_centerHorizontal="true"
				android:transitionName="userHead"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Large Text"
				android:id="@+id/user_name"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/user_head"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:id="@+id/user_id"
				android:layout_below="@id/user_name"
				android:textColor="?color_text_pressed"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:layout_below="@id/user_id"
				android:id="@+id/user_data"
				android:textColor="?color_text_pressed"
				android:layout_centerHorizontal="true"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Small Text"
				android:textColor="?color_text_pressed"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/user_data"
				android:id="@+id/user_email"
				android:layout_marginBottom="10dp"/>

		</RelativeLayout>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:elevation="5dp"
		app:cardCornerRadius="4dp"
		android:transitionName="card"
		android:id="@+id/cardview"
		android:layout_margin="5dp">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="@string/change_email"
				android:layout_weight="5"
				android:id="@+id/edit_email"
				android:transitionName="email"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="@string/change_password"
				android:layout_weight="5"
				android:id="@+id/edit_password"
				android:transitionName="pass"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:elevation="5dp"
		app:cardCornerRadius="4dp"
		android:transitionName="card"
		android:id="@+id/cardview"
		android:layout_margin="5dp">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="@string/user_logout"
				android:layout_weight="5"
				android:id="@+id/user_logout"
				android:transitionName="email"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>

