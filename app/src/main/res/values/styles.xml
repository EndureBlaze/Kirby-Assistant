<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="nocropper__CropperView">
        <attr name="nocropper__grid_color" format="color"/>
        <attr name="nocropper__grid_thickness" format="dimension"/>
        <attr name="nocropper__grid_opacity" format="float"/>
        <attr name="nocropper__padding_color" format="color"/>
        <attr name="nocropper__add_padding_to_make_square" format="boolean"/>
        <attr name="nocropper__fit_to_center" format="boolean"/>
    </declare-styleable>
    <style name="BottomDialogDefaultAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

	<style name="LauncherLoading" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ka_logo</item>
    </style>

	<style name="BottomDialogStyle" parent="@android:style/Theme.Material.Dialog">
		<item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">		
		<item name="android:windowBackground">@android:color/white</item>
		<item name="color_bkg_main">#FFF5F5F5</item>
        <item name="color_text">#000000</item>
        <item name="color_text_pressed">#80212121</item>
        <item name="color_text_hint">#40212121</item>
        <item name="color_divider">#bdbdbd</item>
	</style>

    <style name="BuleTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#2196F3</item>	
		<item name="colorPrimaryDark">#1976D2</item>
		<item name="colorAccent">#448AFF</item>	
	</style>

	<style name="RedTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#F44336</item>	
		<item name="colorPrimaryDark">#D32F2F</item>
		<item name="colorAccent">#FF5252</item>	
		<item name="android:textColorPrimary">#000000</item>
		<item name="android:colorControlNormal">#F44336</item>
	</style>

	<style name="PurpleTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#9C27B0</item>	
		<item name="colorPrimaryDark">#7B1FA2</item>
		<item name="colorAccent">#E040FB</item>	
	</style>

	<style name="LindigoTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#3F51B5</item>	
		<item name="colorPrimaryDark">#303F9F</item>
		<item name="colorAccent">#536DFE</item>	
	</style>

	<style name="TealTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#009688</item>	
		<item name="colorPrimaryDark">#00796B</item>
		<item name="colorAccent">#64FFDA</item>	
	</style>

	<style name="GreenTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#4CAF50</item>	
		<item name="colorPrimaryDark">#388E3C</item>
		<item name="colorAccent">#69F0AE</item>	
	</style>

	<style name="OrangeTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#FF9800</item>	
		<item name="colorPrimaryDark">#F57C00</item>
		<item name="colorAccent">#FFAB40</item>	
	</style>

	<style name="BrownTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#795548</item>	
		<item name="colorPrimaryDark">#5D4037</item>
		<item name="colorAccent">#5D4037</item>	
	</style>

	<style name="BlueGreyTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#607D8B</item>	
		<item name="colorPrimaryDark">#455A64</item>
		<item name="colorAccent">#455A64</item>	
	</style>

	<style name="YellowTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#FFEB3B</item>	
		<item name="colorPrimaryDark">#FDD835</item>
		<item name="colorAccent">#FFEA00</item>	
	</style>

	<style name="KirbyTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#ee749d</item>	
		<item name="colorPrimaryDark">#cf5f83</item>
		<item name="colorAccent">#FF4081</item>	
	</style>

	<style name="WhiteTheme" parent="BaseLightTheme">		
		<item name="colorPrimary">#999999</item>	
		<item name="colorPrimaryDark">#666666</item>
		<item name="colorAccent">#448AFF</item>	
	</style>

	<style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">		
		<item name="color_bkg_main">#0f0f0f</item>
        <item name="color_text">#00ffffff</item>
        <item name="color_text_pressed">#80fdfdfd</item>
        <item name="color_text_hint">#40fdfdfd</item>
        <item name="color_divider">#bdbdbd</item>
		<item name="colorAccent">#009688</item>	
	</style>

</resources>
